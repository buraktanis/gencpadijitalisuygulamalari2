@model Entities.Concrete.Configuration

@{
    ViewData["Title"] = "NewConfiguration";
}

<div class="">
    <div class="bg-white  ">
        <h2 class="pt-3 pb-4 pl-4"><strong>@ViewBag.Name</strong><i class="fas fa-arrow-left  border p-2  rounded-circle border-primary text-primary float-right" style="margin-right:2%;"></i></h2>
    </div>

</div>
<div class="bg-white  mt-4 " style="margin-left:2%;margin-right:2%;">
    <div class="row bg-white rounded">

        <div class="col-sm-6">
            <form asp-action="UpdateConfiguration">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Info" class="control-label">Açıklama</label>
                    <input asp-for="Info" class="form-control" />
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>
                <input asp-for="Type" class="form-control" hidden />
                <input asp-for="Id" class="form-control" hidden />


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <div>
                        <a href="/Configure/Index/@Model.Type">Back to List</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
