@model Entities.Concrete.Setting

@{
    ViewData["Title"] = "NewConfiguration";
}

<div class="">
    <div class="bg-white  ">
        <h2 class="pt-3 pb-4 pl-4">
            <strong>
                Güncelle
            </strong><i class="fas fa-arrow-left  border p-2  rounded-circle border-primary text-primary float-right" style="margin-right:2%;"></i>
        </h2>
    </div>

</div>
<div class="bg-white  mt-4 " style="margin-left:2%;margin-right:2%;">
    <div class="row bg-white rounded">

        <div class="col-sm-6">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Şirket Unvanı</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Adres</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <input asp-for="Id" hidden />
                <div class="form-group">
                    <label asp-for="WarehouseOfficer" class="control-label">Depo Yetkilisi/Telefonu:</label>
                    <input asp-for="WarehouseOfficer" class="form-control" />
                    <span asp-validation-for="WarehouseOfficer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WarehouseAddress" class="control-label">Depo Adresi:</label>
                    <input asp-for="WarehouseAddress" class="form-control" />
                    <span asp-validation-for="WarehouseAddress" class="text-danger"></span>
                </div>
         
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
              
            </form>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
