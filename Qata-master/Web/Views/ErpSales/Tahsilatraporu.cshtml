                                            <a class="btn btn-light btnsearch" data-text="@item.kod">@item.kod</a>

                                        </td>
                                        <td>
                                            <a class="btn btn-light btnsearch" data-text=" @item.unvan"> @item.unvan</a>
                                        </td>
                                        <td>

                                            @item.GECEN_GUN
                                        </td>

                                        <td>
                                            @string.Format("{0:C0}", item.TUTAR)

                                        </td>

                                        @if (item.MODÜL == "VADE GEÇMİŞ!")
                                        {
                                            <td style="background-color: #d72f2f" class="text-center text-white">

                                                @item.MODÜL
                                            </td>

                                        }
                                        else
                                        {
                                            <td>

                                                @item.MODÜL
                                            </td>
                                        }




                                    </tr>

                                }
                            </tbody>

                        </table>
